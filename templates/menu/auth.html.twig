<div class="col-auto col-lg-4 text-end ">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a class="px-3 text-decoration-none link-dark" href="{{ path('app_profile') }}">
           <span class="px-1">{{ app.user }}</span>
           <img src="https://placekitten.com/46" alt="Profile Picture" class="rounded-circle">
        </a>
    {% else %}
        <a href="{{ path('app_login') }}" class="btn border-0 shadow-none">Login</a>
        <a href="{{ path('app_register') }}" class="btn btn-soft-warning">Sign up</a>
    {% endif %}
</div>