{% extends 'base.html.twig' %}

{% block title %}
    {% trans %} login.header {% endtrans %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row g-3 col-6 mx-auto my-5">

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security')|raw }}
                </div>
            {% endif %}

            <div class="component">
                <h1 class="mb-4">
                    {% trans %} login.header {% endtrans %}
                </h1>

                {{ form(loginForm) }}
            </div>
        </div>
    </div>
{% endblock %}
