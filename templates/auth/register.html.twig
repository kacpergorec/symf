{% extends 'base.html.twig' %}

{% block title %}
    {% trans %} register.header {% endtrans %}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row g-3 col-6 mx-auto my-5">
            <div class="component">
                <h1 class="mb-7">
                    {% trans %} register.sign_up {% endtrans %}
                </h1>

                {{ form_start(registerForm) }}

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registerForm.email) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registerForm.username) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(registerForm.password) }}
                    </div>
                </div>

                {{ form_end(registerForm) }}
            </div>
            <div class="my-3">
                <small>Already registered?</small>
                <a href="{{ path('app_login') }}" class="text-warning text-sm font-semibold">Sign in</a>
            </div>
        </div>


    </div>
{% endblock %}
