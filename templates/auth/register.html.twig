{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">
        <div class="row g-3 col-6 mx-auto my-5">

            <h1>Register</h1>

            {{ form_start(registerForm) }}

            <div class="row">
                <div class="col-md-6">
                    {{ form_row(registerForm.email) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registerForm.username) }}
                </div>
                <div class="col-12">
                    {{ form_row(registerForm.password) }}
                </div>
            </div>

            {{ form_end(registerForm) }}

        </div>

    </div>
{% endblock %}
