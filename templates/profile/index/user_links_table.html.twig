<section class="col-lg-{{ colSize }} mt-4">
    <div class="component">
        <small class="fw-bold text-black-50">{{ 'profile.your_links'|trans }}</small>
        <table class="table mt-3">
            <thead>
            <tr>
                <th>Long URL</th>
                <th colspan="2">Short URL</th>
            </tr>
            </thead>
            <tbody>
            {% for url in app.user.urls %}
                <tr>
                    <td class="small long-url">{{ url.longUrl }}</td>
                    <td class="small">
                        <a href="{{ absolute_url(url.shortKey) }}">{{ app.request.httpHost }}/{{ (url.shortKey) }}</a>
                    </td>
                    <td class="table-options">
                        <a href="#refresh" class="option svg-refresh"></a>
                        <a href="{{ path('app_url_delete',{id: url.id}) }}" class="option svg-delete"></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</section>
