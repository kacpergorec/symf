<section class="col-lg-{{ colSize}} mt-4 mt-lg-0">
    <div class="component">
        <small class="h5">{{ 'profile.account_information'|trans }}</small>
        <table class="table user-info mt-6">
            {% for key, userInfo in app.user.userInfoArray %}
                <tr>
                    <td>{{ key|trans }}</td>
                    <td>
                        {{ userInfo ? userInfo|raw : 'interface.not_defined'|trans|bubble('tertiary') }}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
</section>